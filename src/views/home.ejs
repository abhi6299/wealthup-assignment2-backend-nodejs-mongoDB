<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/css/main.css"> 
    <title>Code Validation</title>
</head>
<body>
    <div id="codeDisplay">
    <form action='/api/codes/update' method="post">
        <h1>Code Validation App</h1>
        <hr/>
        <input name="codeFetched" id="codeFetched" value=<%=code%> />
        <button id="refreshBtn" onclick="refreshCode()" >Refresh Code</button>
        <input type="text" name="code" id="code" placeholder="Enter code">
        <button id="submitBtn" >Submit</button>
    </form>
    <div id="message"><%= message %></div>
    </div>
    <% if(bool){ %>
        <script>
            setTimeout(() => {
                window.location.href = '/api/codes/use';
            }, 3000);
        </script>
    <% } %>
    
    <script>
        function refreshAndNavigate() {
            // Redirect to a specific API path
            window.location.href = '/api/codes';
            console.log('Navigating to /api/codes...');
            // Reload the current page after a short delay (e.g., 2 seconds)
            // setTimeout(() => {
            //     window.location.reload();
            // }, 2000);
        }
        async function refreshCode() {
        try {
            const response = await fetch('/api/codes', {
                method: 'GET',
                headers: {
                    'Content-Type': 'application/json',
                },
            });

            if (!response.ok) {
                throw new Error('Failed to refresh code');
            }
            console.log("Reloading .........");
            window.location.href = '/api/codes';
            // Reload the page after successful response
            // window.location.reload();
        } catch (error) {
            console.error('Error refreshing code:', error);
            // Display an error message to the user
            alert('Failed to refresh code. Please try again later.');
        }   
    }
    </script>

</body>
</html>
